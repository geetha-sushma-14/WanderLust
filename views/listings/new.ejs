<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br/><br/>
    <h3>Create a new listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
            <div class="valid-feedback">
                 Title looks good!
            </div>
            <div class="invalid-feedback">
                Title should be valid
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" class="form-control" required></textarea>
            <div class="valid-feedback">
                Description looks good!
           </div>
           <div class="invalid-feedback">
               Please enter valid description
           </div>
        </div>
    
        <div class="mb-3">
            <label for="image" class="form-label">Upload Link</label>
            <input name="listing[image]" type="file" class="form-control" required/>
        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control" type="number" required/>
            <div class="valid-feedback">
                Price looks good!
           </div>
           <div class="invalid-feedback">
               Price should be valid
           </div>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-6">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="city, state" type="text" class="form-control" required/>
                <div class="valid-feedback">
                    Location looks good!
               </div>
               <div class="invalid-feedback">
                   Location should be valid
               </div>
            </div>
            
            <div class="mb-3 col-md-6">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
                <div class="valid-feedback">
                    Country looks good!
               </div>
               <div class="invalid-feedback">
                   Country should be valid
               </div>
            </div>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Category</label>
            <div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="listing[category]" id="beach" value="beach" required>
                    <label class="form-check-label" for="beach">Beach</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="listing[category]" id="city" value="city" required>
                    <label class="form-check-label" for="city">City</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="listing[category]" id="mountain" value="mountain" required>
                    <label class="form-check-label" for="mountain">Mountain</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="listing[category]" id="trees" value="trees" required>
                    <label class="form-check-label" for="trees">Trees</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="listing[category]" id="snow" value="snow" required>
                    <label class="form-check-label" for="snow">Snow</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="listing[category]" id="camping" value="camping" required>
                    <label class="form-check-label" for="camping">Camping</label>
                </div>
            </div>
        </div>


        <button class="btn btn-dark add-btn mt-3 mb-3">ADD</button>
        
    </form>
</div>
</div>
